{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "paths": {},
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "types": ["node", "jasmine"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
